<?xml version="1.0" encoding="UTF-8"?>
<project name="DelicacyFusion-Env" basedir="">
	<property environment="env" />
	<dirname property="release.build.directory" file="${ant.file.DelicacyFusion-Env}" />
	<property file="${release.build.directory}/env.properties" />
	<property name="JBOSS_HOME" value="${release.build.directory}/jboss-as-7.1.1.Final" />
	<!-- -Java compilier options-->
	<property name="compile.debug" value="true" />
	<property name="compile.deprecation" value="off" />
	<property name="compile.jdk-version.source" value="1.7" />
	<property name="compile.jdk-version.target" value="1.7" />
	<property name="compile.optimize" value="true" />
	<property name="compile.nowarn" value="on" />
	<path id="compile.dependent.path" />
	<path id="compile.classpath">
		<fileset dir="${release.build.directory}/third-lib">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${JBOSS_HOME}/modules">
			<include name="**/*.jar" />
		</fileset>
		<path refid="compile.dependent.path" />
	</path>
	<path id="build.classpath">
		<fileset dir="${release.build.directory}/third-lib">
			<include name="eclipselink.jar" />
		</fileset>
		<fileset dir="${JBOSS_HOME}/modules">
			<include name="**/*jpa*.jar" />
		</fileset>
		<fileset dir="${release.build.directory}/ext">
			<include name="antcontrib.jar" />
		</fileset>
	</path>
	<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="build.classpath" />
	<taskdef name="weave" classname="org.eclipse.persistence.tools.weaving.jpa.StaticWeaveAntTask" classpathref="build.classpath" />
</project>

