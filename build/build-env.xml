<?xml version="1.0" encoding="UTF-8"?>
<project name="DelicacyFusion-Env" basedir="">
	<property environment="env" />
	<dirname property="full.build.dir" file="${ant.file.DelicacyFusion-Env}" />
	<property name="build.version" value="1.0" />
	<property file="env.properties" />
	<property name="JBOSS_HOME" value="${full.build.dir}/jboss-as-7.1.1.Final" />
	<!-- -Java compilier options-->
	<property name="compile.debug" value="true" />
	<property name="compile.deprecation" value="off" />
	<property name="compile.jdk-version.source" value="1.6" />
	<property name="compile.jdk-version.target" value="1.6" />
	<property name="compile.optimize" value="true" />
	<property name="compile.nowarn" value="on" />

	<path id="compile.classpath">
		<fileset dir="${full.build.dir}/third-lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${JBOSS_HOME}/modules">
			<include name="**/*.jar" />
		</fileset>
	</path>
	<path id="build.classpath">
		<fileset dir="${full.build.dir}/third-lib">
			<include name="eclipselink.jar" />
		</fileset>
		<fileset dir="${JBOSS_HOME}/modules">
			<include name="**/*jpa*.jar" />
		</fileset>
		<fileset dir="${full.build.dir}">
			<include name="antcontrib.jar" />
		</fileset>
	</path>
	<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="build.classpath" />
	<taskdef name="weave" classname="org.eclipse.persistence.tools.weaving.jpa.StaticWeaveAntTask" classpathref="build.classpath" />
</project>

