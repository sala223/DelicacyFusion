<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/serverAddrCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingRight="10dp"
        android:text="@string/server_addr" />

    <EditText
        android:inputType="textAutoCorrect"
        android:id="@+id/serverAddr"
        android:layout_toRightOf="@id/serverAddrCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tenantCodeCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/serverAddr"
        android:text="@string/tenant_code"
        android:paddingRight="10dp"/>
    
    <EditText
        android:inputType="textAutoCorrect"
        android:id="@+id/tenantCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverAddr"
        android:layout_toRightOf="@id/tenantCodeCaption"
        android:paddingRight="5dp"/>
 
</RelativeLayout>